<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  android:layout_marginBottom="1dp" android:layout_marginTop="10dp" android:layout_marginRight="4dp"  android:layout_marginLeft="4dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp" android:elevation="110dp" app:cardElevation="110dp" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/banner" android:scaleType="centerCrop"
                    android:src="@drawable/bannerpopularfacial"
                    />
        <LinearLayout
            android:background="#8b000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/categoryname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="9"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:text="Facial"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                 />


        </LinearLayout>
        </FrameLayout>
         <!--      <ImageView

                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_margin="3dp" android:padding="10dp" android:src="@drawable/arrow" android:layout_weight="1" />
-->

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>